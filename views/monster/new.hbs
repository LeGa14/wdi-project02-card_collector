<h1>Create a New Monster</h1>

<form action="/user/{{userId}}/monster" method="POST">
    <div>
        <label for="name">Monster Name: </label>
        <input type="text" name="name" placeholder="Monster Name" />
    </div>
    <div>
        <label for="Region">Region: </label>
        <input type="text" name="region" placeholder="Region" />
    </div>
    <div>
        <label for="age">Age: </label>
        <input type="text" name="age" placeholder="Age" />
    </div>
    <div>
        <label for="gender">Gender: </label>
        <input type="text" name="gender" placeholder="Gender" />
    </div>
    <div>
        <label for="sprite">Monster Sprite (link/URL): </label>
        <input type="text" name="sprite" placeholder="Monster Sprite Link" />
    </div>
    <button type="submit">Save New Monster</button>
</form>